<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_label_color_frame_lauout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/item_label_color_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/item_label_tv_no_color"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="@string/no_color"
        android:textSize="@dimen/description_text_size16"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_label_color_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="10dp"
        android:contentDescription="@null"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_right"
        app:tint="#FF101010"
        tools:visibility="visible" />
</FrameLayout>