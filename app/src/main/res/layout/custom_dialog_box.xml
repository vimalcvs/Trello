<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/custom_dialog_text_margin10">

    <TextView
        android:id="@+id/custom_dialog_tv_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/custom_dialog_text_margin10"


        android:textSize="@dimen/custom_dialog_text_size18"
        tools:text="Do you really want to delete?" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/custom_dialog_btn_no"
            style="?android:attr/buttonBarNegativeButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="@string/no"

            android:textSize="@dimen/custom_dialog_text_size18" />

        <Button
            android:id="@+id/custom_dialog_btn_yes"
            style="?android:attr/buttonBarPositiveButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/custom_dialog_text_margin10"


            android:text="@string/yes"

            android:textSize="@dimen/custom_dialog_text_size18" />
    </LinearLayout>
</LinearLayout>